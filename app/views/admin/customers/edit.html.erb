<div class='container'>
    <div class='row'>
        <h4><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集</h4>
    </div>
    <%= form_with model: @customer, url: admin_customer_path do |f| %>
    <div class='row'>
        <div class='col-lg-12'>
            <%= f.label :会員ID %>
            <%= f.text_field :id %>
        </div>
        <div class='col-lg-12'>
            <%= f.label :氏名 %>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
        </div>
        <div class='col-lg-12'>
            <%= f.label :フリガナ %>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
        </div>
        <div class='col-lg-12'>
            <%= f.label :郵便番号 %>
            <%= f.text_field :postal_code %>
        </div>
        <div class='col-lg-12'>
            <%= f.label :住所 %>
            <%= f.text_field :address %>
        </div>
        <div class='col-lg-12'>
            <%= f.label :電話番号 %>
            <%= f.text_field :phone_number %>
        </div>
        <div class='col-lg-12'>
            <%= f.label :メールアドレス %>
            <%= f.email_field :email %>
        </div>
        <div class='col-lg-12'>
            <label><%= f.radio_button :user_status, '有効', checked: 'checked'%> 有効</label>
            <label><%= f.radio_button :user_status, '無効' %> 退会済</label>
        </div>
        <div class='col-lg-12'>
            <%= f.submit '変更を保存', class: 'btn btn-success' %>
        </div>
    </div>
    <% end %>
</div>