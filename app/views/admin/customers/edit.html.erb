<h3>会員情報編集</h3>
<%= form_with model: @customer,method: :patch do |f| %>
    <h4>会員ID</h4>
        <%= customers_id %>
    <h4>氏名</h4>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
    <h4>フリガナ</h4>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
    <h4>郵便番号</h4>
        <%= f.text_field :postal_code %>
    <h4>住所</h4>
        <%= f.text_field :address %>
    <h4>電話番号</h4>
        <%= f.text_field :phone_number %>
    <h4>メールアドレス</h4>
        <%= f.text_field :email %>
        
    <%= form.radio_button :user_status, :true %>
    <%= form.label :user_status, "有効",{value: :true, style: "display: inline-block;"} %>
    <%= form.radio_button :user_status, :false %>
    <%= form.label :user_status, "退会",{value: :false, style: "display: inline-block;"} %>
    <%= f.submit "変更を保存" %>
<% end %>
