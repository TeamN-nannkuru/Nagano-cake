<div class='container'>
    <div class='row'>
        <h4>注文履歴一覧</h4>
        <div class='row'>
        <table class='table'>
            <thead>
                <tr>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>
            <% @orders.each do |order| %>
            <tbody>
                <tr>
                    <td><%= link_to @order.created_at.strftime('%Y-%m-%d %H:%M:%S'), admin_order_path(@order) %></td>
                    <td><%= @order.receriver_name %></td>
                    <td><%= @order.cart_items.item_count %></td>
                    <td><%= @order.order_status %></td>
                </tr>
            </tbody>
            <% end %>
        </tabel>
        <%= paginate @orders %>
        </div>
    </div>
</div>