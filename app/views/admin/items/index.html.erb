<div class='container'>
<h2>商品一覧</h2>
<div class='text-right index-new'>
    <%= link_to new_admin_item_path do %>
    <button class='btn btn-light btn-circle btn-circle'>+</button>
    <% end %>
</div>
<table class='table table-hover table-inverse'>
    <thead>
        <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税別価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre_id %></td>
            <td><%= item.sale_status_i18n %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= paginate @items %>
</div>