<h3>商品新規登録</h3>
<%= form_with model: @item, url: new_admin_item_path do |f| %>
<div class='form-group'>
    <%= f.label :商品画像 %>
    <%= f.file_field :image, accept: "image/*" %>
</div>
<div class='form-group'>
    <%= f.label :商品名 %>
    <%= f.text_field :name, class: 'form-control item_name' %>
</div>
<div class='form-group'>
    <%= f.label :商品説明 %>
    <%= f.text_area :description, class: 'form-control item_description' %>
</div>
<div class='form-group'>
    <%= f.label :ジャンル %>
    <%= f.select :genre_id, [["cake","cake"], ["cake","cake"]], include_blank: '--選択してください--' %>
</div>
<div class='form-group'>
    <%= f.label :税別価格 %>
    <%= f.text_field :price, class: 'form-control item-price' %>
</div>
<div class='form-group'>
    <%= f.label :販売ステータス %>
    <%= f.check_box :sale_status %>
</div>
<div class='form-group'>
    <%= f.submit :新規登録, class: 'btn btn-success' %>
</div>
<% end %>
