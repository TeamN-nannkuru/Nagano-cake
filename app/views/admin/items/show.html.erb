<h3>商品詳細</h3>
<% if @item.image.attached? %>
    <%= image_tag @item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
  <label>
    <tr>
      <td>
        商品名
        <%= @item.name %>
      </td>
      <td>
        商品説明
        <%= @item.description %>
      </td>
      <td>
        ジャンル
        <%= @item.genre_id %>
      </td>
      <td>
        税込価格
        <%= @item.price %>
      </td>
      <td>
        販売ステータス
        <%= @item.sale_status %>
      </td>
      <td>
        <%= link_to '編集する', edit_admin_item_path(@item), class: 'btn btn-success' %>
      </td>
    </tr>
  </label>