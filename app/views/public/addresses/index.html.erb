<h2>配送先登録/一覧</h2>
<%= form_with model: @address,url: public_addresses_path do |f| %>
    <h4>郵便番号（ハイフンなし）</h4>
    <%= f.text_field :ordered_postal_code %>
    <h4>住所</h4>
    <%= f.text_field :ordered_address %>
    <h4>宛名</h4>
    <%= f.text_field :receriver_name %>
    <%= f.submit "新規登録" %>
<% end %>

<p>郵便番号</p>
<p>住所</p>
<p>宛名</p>
<%= @addresses.each do |address| %>
    <%= address.ordered_postal_code %>
    <%= address.ordered_address %>
    <%= address.receriver_name %>
    
<% end %>
