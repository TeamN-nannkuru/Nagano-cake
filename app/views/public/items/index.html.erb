<div class='container'>
<h3>商品一覧</h3>
<div class='row'>
    <% @items.each do |item| %>
    <tr class='box' style='margin-right:20px;'>
        <td class='col'>
            <% if item.image.attached? %>
            <%= image_tag item.image, size: "200x200" %>
            <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
        </td>
        <td class='col'>
            <%= item.name %>
        </td>
        <td class='col'>
            ¥<%= (item.price*1.1) %>
        </td>
    </tr>
    <% end %>
    <%= paginate @items %>
</div>