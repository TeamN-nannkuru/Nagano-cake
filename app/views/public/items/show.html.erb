<div class='container'>
    <div class='row' style='margin:50px;'>
        <div class='col-lg-12'>
        <%= form_with model: @cart_item, url: public_cart_items_path do |f| %>
        <div class='col-sm-6' style='float:left;'>
            <% if @item.image.attached? %>
            <%= image_tag @item.image, size: "400x400" %>
            <% else %>
            <%= image_tag 'no_image', size: "400x400" %>
            <% end %>
        </div>
        <div class='col-sm-6' style='float:right;'>
            <h2 style='margin:20px;'><%= @item.name %></h2>
            <h4 style='margin:20px;'><%= @item.description %></h4>
            <h4 style='margin:20px;'>¥<%= (@item.price*1.1).round.to_i %>(税込)</h4>
            <h4>
                <%= f.select :item_count, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => '個数選択'}, style: 'margin:20px;' %>
                <%= f.submit 'カートに入れる', class: 'btn btn-success', style: 'margin:20px;' %>
            </h4>
        </div>
        <% end %>
        </div>
    </div>
</div>

