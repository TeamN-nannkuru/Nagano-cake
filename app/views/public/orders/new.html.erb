<h2>注文情報入力</h2>
<h3>支払方法</h3>
    <%= form_with model: @order,url: public_orders_new_path do |f| %>
        <%= form.radio_button :payment_method, :card %>
        <%= form.label :payment_method, "クレジットカード",{value: :card, style: "display: inline-block;"} %>
        <%= form.radio_button :payment_method, :bank %>
        <%= form.label :payment_method, "銀行振込",{value: :bank, style: "display: inline-block;"} %>
    <% end %>
<h3>お届け先</h3>
    <%= form_with model: @order,url: public_orders_new_path do |f| %>
        <%= form.radio_button :ordered_address, "customers_address" %>
        <%= form.label :ordered_address, {value: :card, style: "display: inline-block;"} do %>
            <h4>ご自身の住所</h4>
            <%= "#{current_customer.postal_code}""#{current_customer.address}" %>
            <%= "#{current_customer.first_name}""#{current_customer.last_name}" %>
        <% end %>
        <%= form.radio_button :ordered_address, "customers_address" %>
        <%= form.label :ordered_address, {value: :bank, style: "display: inline-block;"} do %>
            <h4>登録済住所</h4>
            <%= form.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
        <% end %>
        <%= form.radio_button :ordered_address, "new_address" %>
        <%= form.label :ordered_address ,{value: :bank, style: "display: inline-block;"} do %>
            <h4>新しいお届け先</h4>
            <%= form.label :"郵便番号（ハイフンなし）" %>
            <%= f.text_field :ordered_postal_code %>
            <%= form.label :"住所" %>
            <%= f.text_field :ordered_address %>
            <%= form.label :"宛名" %>
            <%= f.text_field :receriver_name %>
        <%= f.submit "確認画面へ進む" %>
    <% end %>
        


<% end %>