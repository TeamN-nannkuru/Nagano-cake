<div class='container'>
    <div class='row'>
        <div class='col-xs-9'>
            <div>
            <p>商品名</p>
            <p>単価(税込)</p>
            <p>数量</p>
            <p>小計</p>
            <% @cart_items.each do |cart_item| %>
                <%= link_to public_item_path(cart_item.item_id) do %>
                    <%= attachment_image_tag cart_item.item, :image, size: "50x50", fallback: 'no_image_jpg' %><%= cart_item.item.item_name %>
                <% end %>
                <%= (cart_item.item.price*1.1).round.to_i %>
                <%= ((cart_item.item.price*1.1)*cart_item.item_count) %>
            <% end %> 
            <p>送料</p>
            <p>800</p>
            <p>商品合計</p>
            <%= @total_price += ((cart_item.item.price*1.1)*cart_item.item_count).round.to_i %>
                <p>請求金額</p>
            <%= @order.billing_amount %>
            <p>支払方法</p>
        <% if :payment_method == card %>
            <p>クレジットカード</p>
        <% elsif :payment_method == bank %>
            <p>銀行振込</p>
        <% end %>
            <p>お届け先</p>
                <%= @order.ordered_postal_code %>
                <%= @order.ordered_address %>
                <%= @order.receriver_name %>
            </div>
            <div>
                <!-- 情報 -->
            <%= form_with model: @order, url: public_orders_path, method: :post do |f| %>
            <%= f.hidden_field :ordered_postal_code, value: @order.ordered_postal_code  %>
            <%= f.hidden_field :ordered_address, value: @order.ordered_address %>
            <%= f.hidden_field :receriver_name, value: @order.receriver_name %>
            <%= f.hidden_field :payment_method, value: @order.payment_method %>
                <%= f.submit "注文を確定する" %>
            <% end %>
            </div>
        </div>
    </div>
</div>