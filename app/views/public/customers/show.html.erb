<div class='container'>
<h4 class='row'>マイページ</h4>
<h4>登録情報</h4><%= link_to '編集する', edit_public_customer_path(@customer.id), class: 'btn btn-success mypage_edit' %>
<table class='table table-bordered'>
    <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
        <td>カナ</td>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
    </tr>
</table>
<p><strong>配送先</strong><%= link_to '一覧を見る', public_addresses_path, class: 'btn btn-primary' %></p>
<p><strong>注文履歴</strong><%= link_to '一覧を見る', public_orders_show_path, class: 'btn btn-primary' %></p>
</div>