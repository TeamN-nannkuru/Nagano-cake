<div class='container'>
    <div class='row'>
        <div class='col-xs-10'>
            <h2>ショッピングカート</h2>
        </div>
        <div class='col-xs-2'>
            <%= link_to 'カートを空にする', public_cart_items_destroy_all_path(@cart_items), method: :delete, class: 'btn btn-danger' %>
        </div>
    </div>
    <div class='row'>
        <h4><%= notice %></h4>
        <table class='table-bordered'>
            <thead>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
            </thead>
            <% @cart_items.each do |cart_item| %>
            <tbody>
                <td>
                    <%= link_to public_item_path(cart_item.item_id) do %>
                    <%= attachment_image_tag cart_item.item, :image, size: "50x50", fallback: 'no_image_jpg' %><%= cart_item.item.item_name %>
                    <% end %>
                </td>
                <td>
                    <%= (cart_item.item.price*1.1) %>
                </td>
                <td>
                    <%= form_with model: @cart_item, url: public_cart_item_path(cart_item) do |f| %>
                    <%= f.select :item_count, min:1, max:20 %><%= f.submit '変更', class: 'btn btn-success' %>
                    <% end %>
                </td>
                <td>
                    <%= ((cart_item.item.price*1.1)*cart_item.item_count) %>
                    <%= @total_price += ((cart_item.item.price*1.1)*cart_item.item_count) %>
                </td>
                <td>
                    <%= button_to '削除する', public_cart_item_path(cart_item), method: :delete, class: 'btn btn-danger' %>
                </td>
            </tbody>
            <% end %>
        </table>
    </div>
    <div class='row'>
        <div class='col-xs-9'>
            <%= link_to '買い物を続ける', root_path, class: 'btn btn-primary' %>
        </div>
        <div class='col-xs-3'>
            <div>合計金額</div>
            <div><%= @total_price %></div>
        </div>
    </div>
    <div class='row'>
        <%= link_to '情報入力に進む', new_public_order_path, class: 'btn btn-success' %>
    </div>
</div>